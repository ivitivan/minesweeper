 $grey50 = #FAFAFA
$grey100 = #F5F5F5
$grey200 = #EEEEEE
$grey300 = #E0E0E0
$grey400 = #BDBDBD
$grey500 = #9E9E9E
$grey600 = #757575
$grey700 = #616161
$grey800 = #424242
$grey900 = #212121

body
  margin 0
  padding 0
  color $grey900
.root
  display flex
  flex-wrap wrap
  position relative
  z-index 0
.grid
  display flex
  flex-wrap wrap
  font-size 25px
  //border 1px solid $grey900
.grid__row
  display flex
  flex-basis 100%
  justify-content center
.grid__cell
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  display flex
  flex-basis 50px
  min-width 50px
  border 1px solid gray
  height 50px
  justify-content center
  align-items center
  cursor pointer
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  &_open
    background #BFBFBF
  &_open&_occupied
    background #E46464
  &_flagged
    background #639C5B

.header
  position relative
  z-index 8
  flex-grow 1
  line-height 64px
  display flex
  margin-bottom 32px
  &__left
    flex-grow 1
    flex-basis 25%
    display flex
  &__center
    flex-grow 2
    display flex
    flex-basis 50%
    justify-content center
  &__right
    flex-grow 1
    flex-basis 25%
    display flex
    justify-content flex-end
.game__controls
  display flex
  justify-content center
  flex-wrap wrap
  position fixed
  z-index 6
  background white
  top 64px
  width 100%
  box-shadow 0 4px 5px 0 rgba(0,0,0,0.14),0 1px 10px 0 rgba(0,0,0,0.12),0 2px 4px -1px rgba(0,0,0,0.2)
  left 0
  flex-basis 100%
  &_hide
    display none
.timer
  display flex
  justify-content center
  flex-grow 1
.flagged-counter
  display flex
  justify-content center
  flex-grow 1
.grid-container
  position relative
  z-index 1
  display flex
  flex-basis 100%
  flex-grow 1
  justify-content center
.button
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  min-width 64px
  background white
  border none
  cursor pointer
  outline none
  &:hover
    color $grey600
[class^="icon-"]
  font-size 24px
.input-text
  margin-right 20px
  margin-bottom 20px
  margin-top 20px
  font-size 20px
  line-height 28px
  label
    margin-right 20px
  input
    font-size 20px
    width 32px
    height 32px
